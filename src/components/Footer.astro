---
interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;
const BASE = import.meta.env.BASE_URL;

const content = {
  de: {
    company: "Klartext AI",
    address: {
      title: "Adresse",
      street: "Lerchenfelder Straße 74/2/7",
      city: "1080 Wien",
      country: "Österreich"
    },
    contact: {
      title: "Kontakt",
      email: "office@klartext-ai.com",
      phone: "+43 660 81010 67",
      phoneDisplay: "+43 660 81010 67"
    },
    links: {
      successStories: "Erfolgsgeschichten",
      blog: "Blog",
      imprint: "Impressum",
      terms: "AGBs",
      privacy: "Datenschutzerklärung"
    },
    social: {
      title: "Vernetzen Sie sich mit uns",
      subtitle: "Folgen Sie unseren Insights auf LinkedIn",
      cta: "Auf LinkedIn folgen"
    },
    copyright: "© 2025 Klartext AI. Alle Rechte vorbehalten."
  },
  en: {
    company: "Klartext AI",
    address: {
      title: "Address",
      street: "Lerchenfelder Straße 74/2/7",
      city: "1080 Vienna",
      country: "Austria"
    },
    contact: {
      title: "Contact",
      email: "office@klartext-ai.com",
      phone: "+43 660 81010 67",
      phoneDisplay: "+43 660 81010 67"
    },
    links: {
      successStories: "Success Stories",
      blog: "Blog",
      imprint: "Legal Notice",
      terms: "Terms & Conditions",
      privacy: "Privacy Policy"
    },
    social: {
      title: "Connect with us",
      subtitle: "Follow our insights on LinkedIn",
      cta: "Follow on LinkedIn"
    },
    copyright: "© 2025 Klartext AI. All rights reserved."
  }
};

const text = content[lang];
---

<footer class="footer">
  <div class="container">
    <div class="footer-main">
      <div class="footer-grid">
        <div class="footer-info-group">
          <div class="footer-section">
            <h4 class="footer-section-title">{text.address.title}</h4>
            <address class="footer-address">
              <p>{text.address.street}</p>
              <p>{text.address.city}</p>
              <p>{text.address.country}</p>
            </address>
          </div>

          <div class="footer-section">
            <h4 class="footer-section-title">{text.contact.title}</h4>
            <div class="footer-contact">
              <a href={`mailto:${text.contact.email}`} class="contact-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                {text.contact.email}
              </a>
              <a href={`tel:${text.contact.phone}`} class="contact-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                {text.contact.phoneDisplay}
              </a>
            </div>
          </div>
        </div>

        <a href="https://www.linkedin.com/company/klartext-ai/" target="_blank" rel="noopener noreferrer" class="linkedin-card glass-card">
          <div class="linkedin-icon-wrapper">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" class="linkedin-icon">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </div>
          <div class="linkedin-content">
            <h3 class="linkedin-title">{text.social.title}</h3>
            <p class="linkedin-subtitle">{text.social.subtitle}</p>
            <span class="linkedin-cta">
              {text.social.cta}
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 12l4-4-4-4"/>
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>

    <div class="footer-bottom">
      <nav class="footer-nav">
        <a href={lang === 'de' ? `${BASE}success-stories` : `${BASE}en/success-stories`}>{text.links.successStories}</a>
        <a href={lang === 'de' ? `${BASE}blog` : `${BASE}en/blog`}>{text.links.blog}</a>
        <a href={lang === 'de' ? `${BASE}impressum` : `${BASE}en/impressum`}>{text.links.imprint}</a>
        <a href={lang === 'de' ? `${BASE}agb` : `${BASE}en/agb`}>{text.links.terms}</a>
        <a href={lang === 'de' ? `${BASE}datenschutz` : `${BASE}en/datenschutz`}>{text.links.privacy}</a>
      </nav>
      <p class="footer-copyright">{text.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(36, 121, 190, 0.03) 100%
    );
    padding: 100px 0 40px;
    margin-top: 120px;
    /* Added subtle top separator line */
    border-top: 2px solid rgba(36, 121, 190, 0.6);
    /* Optional: slight inner shadow for more definition */
    box-shadow: 0 -1px 0 0 rgba(255,255,255,0.4) inset;
  }

  .footer-main {
    padding-bottom: 60px;
    border-bottom: 1px solid rgba(36, 121, 190, 0.08);
    margin-bottom: 40px;
  }

  .footer-brand-section {
    margin-bottom: 60px;
    text-align: center;
  }

  .footer-logo {
    max-width: 200px;
    height: auto;
    margin-bottom: 16px;
    filter: drop-shadow(0 2px 12px rgba(36, 121, 190, 0.12));
  }

  .footer-tagline {
    font-size: 1.15rem;
    color: var(--color-text-muted);
    font-style: italic;
    font-weight: 300;
    letter-spacing: 0.01em;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 60px;
    align-items: start;
    max-width: 1100px;
    margin: 0 auto;
  }

  .footer-info-group {
    display: flex;
    gap: 60px;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-section-title {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-blue);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .footer-address {
    font-style: normal;
    line-height: 1.9;
  }

  .footer-address p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-text-body);
    font-weight: 300;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    color: var(--color-text-body);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 300;
    width: fit-content;
  }

  .contact-link:hover {
    color: var(--color-blue);
    transform: translateX(4px);
  }

  .contact-link svg {
    flex-shrink: 0;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .contact-link:hover svg {
    opacity: 1;
  }

  /* LinkedIn Card - Prominent Design */
  .linkedin-card {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 32px;
    background: rgba(255, 255, 255, 0.5) !important;
    backdrop-filter: blur(24px) saturate(180%);
    border: 1px solid rgba(36, 121, 190, 0.15);
    border-radius: 16px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .linkedin-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(36, 121, 190, 0.05) 0%,
      transparent 50%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .linkedin-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px -12px rgba(36, 121, 190, 0.25);
    background: rgba(255, 255, 255, 0.7) !important;
    border-color: rgba(36, 121, 190, 0.3);
  }

  .linkedin-card:hover::before {
    opacity: 1;
  }

  .linkedin-icon-wrapper {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #0077B5 0%, #00A0DC 100%);
    border-radius: 12px;
    box-shadow: 0 8px 24px -6px rgba(0, 119, 181, 0.4);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
  }

  .linkedin-card:hover .linkedin-icon-wrapper {
    transform: scale(1.1) rotate(-5deg);
    box-shadow: 0 12px 32px -8px rgba(0, 119, 181, 0.6);
  }

  .linkedin-icon {
    color: white;
  }

  .linkedin-content {
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .linkedin-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: 6px;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
  }

  .linkedin-card:hover .linkedin-title {
    color: var(--color-blue);
  }

  .linkedin-subtitle {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 16px;
    font-weight: 300;
  }

  .linkedin-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-blue);
    transition: gap 0.3s ease;
  }

  .linkedin-card:hover .linkedin-cta {
    gap: 12px;
  }

  .linkedin-cta svg {
    transition: transform 0.3s ease;
  }

  .linkedin-card:hover .linkedin-cta svg {
    transform: translateX(4px);
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    flex-wrap: wrap;
    gap: 24px;
  }

  .footer-logo-centered {
    display: flex;
    justify-content: center;
    margin-bottom: 16px;
  }

  .footer-logo-centered-image {
    max-width: 120px;
    height: auto;
  }

  .footer-nav {
    display: flex;
    gap: 32px;
    flex-wrap: wrap;
  }

  .footer-nav a {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    transition: all 0.3s ease;
    position: relative;
    font-weight: 400;
  }

  .footer-nav a::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-blue);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .footer-nav a:hover {
    color: var(--color-blue);
  }

  .footer-nav a:hover::after {
    width: 100%;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 300;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .footer {
      padding: 80px 0 32px;
      margin-top: 120px;
    }

    .footer-main {
      padding-bottom: 48px;
      margin-bottom: 32px;
    }

    .footer-brand-section {
      margin-bottom: 48px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .footer-info-group {
      justify-content: space-around;
      gap: 40px;
    }

    .linkedin-card {
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 80px 0 20px;
      margin-top: 120px;
    }

    .footer-main {
      padding-bottom: 32px;
      margin-bottom: 20px;
    }

    .footer-brand-section {
      margin-bottom: 32px;
    }

    .footer-logo {
      max-width: 160px;
    }

    .footer-info-group {
      flex-direction: column;
      gap: 32px;
      text-align: center;
    }

    .footer-section {
      align-items: center;
    }

    .footer-address {
      text-align: center;
    }

    .footer-contact {
      align-items: center;
    }

    .contact-link:hover {
      transform: scale(1.03);
    }

    .linkedin-card {
      flex-direction: column;
      text-align: center;
      padding: 28px 24px;
      gap: 20px;
    }

    .linkedin-icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .linkedin-icon {
      width: 28px;
      height: 28px;
    }

    .linkedin-title {
      font-size: 1.15rem;
    }

    .linkedin-subtitle {
      font-size: 0.9rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      padding-top: 24px;
      gap: 20px;
    }

    .footer-nav {
      justify-content: center;
      gap: 24px;
    }
  }
</style>
