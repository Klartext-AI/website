---
interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;
const BASE = import.meta.env.BASE_URL;

const content = {
  de: {
    sectionTitle: "KI aus Europa",
    tagline: "Innovation mit Verantwortung",
    principles: [
      {
        title: "Europäische Souveränität",
        description: "Hosting in Österreich und Deutschland. Ihre Daten bleiben in Europa, unter europäischem Recht."
      },
      {
        title: "DSGVO & EU AI Act",
        description: "Vollständige Konformität ist nicht optional, sondern integraler Bestandteil unserer Architektur."
      },
      {
        title: "Privacy by Design",
        description: "Datenschutz ist kein Zusatzfeature, sondern von Anfang an Teil des Designs."
      }
    ],
    cta: "Mehr über unsere technischen Prinzipien"
  },
  en: {
    sectionTitle: "AI from Europe",
    tagline: "Innovation with Responsibility",
    principles: [
      {
        title: "European Sovereignty",
        description: "Hosting in Austria and Germany. Your data stays in Europe, under European law."
      },
      {
        title: "GDPR & EU AI Act",
        description: "Full compliance is not optional but an integral part of our architecture."
      },
      {
        title: "Privacy by Design",
        description: "Data protection is not an add-on feature but part of the design from the start."
      }
    ],
    cta: "More about our technical principles"
  }
};

const text = content[lang];
---

<section id="european-values" class="european-values section">
  <div class="container">
    <div class="editorial-header fade-in">
      <div class="section-logo-wrapper">
        <img
          src={`${BASE}LOGO_transparent_without_sublime.png`}
          alt="Klartext AI"
          class="section-logo"
          loading="lazy"
          width="150"
          height="auto"
        />
      </div>
      <h2 class="editorial-title">{text.sectionTitle}</h2>
      <p class="editorial-tagline">{text.tagline}</p>
    </div>

    <div class="principles-grid">
      {text.principles.map((principle, index) => (
        <div class="principle-card glass-card fade-in" style={`animation-delay: ${index * 0.15}s`}>
          <div class="principle-icon">
            {index === 0 && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 2a7 7 0 0 0 0 20"/>
              </svg>
            )}
            {index === 1 && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
            )}
            {index === 2 && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
            )}
            {index === 3 && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
            )}
          </div>
          <h3 class="principle-title">{principle.title}</h3>
          <p class="principle-description">{principle.description}</p>
        </div>
      ))}
    </div>

    <div class="cta-container text-center fade-in">
      <a href="#tech-principles" class="btn btn-secondary">{text.cta}</a>
    </div>
  </div>
</section>

<style>
  .european-values {
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(255, 255, 255, 0.5) 50%,
      transparent 100%
    );
    padding: var(--space-2xl) 0;
  }

  .editorial-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    position: relative;
  }

  .section-logo-wrapper {
    margin: 0 auto var(--space-md);
    opacity: 0;
    animation: fadeInScale 1s ease forwards;
    animation-delay: 0.3s;
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .section-logo {
    max-width: 150px;
    height: auto;
    filter: drop-shadow(0 4px 12px rgba(36, 121, 190, 0.2));
  }

  .editorial-title {
    font-size: var(--font-size-h2);
    font-weight: 200;
    margin-bottom: var(--space-sm);
    letter-spacing: -0.03em;
  }

  .editorial-tagline {
    font-size: var(--font-size-h4);
    font-weight: 300;
    font-style: italic;
    color: var(--color-blue);
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  .principles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-md);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-xl);
  }

  .principle-card {
    text-align: center;
    padding: var(--space-lg);
    transition: all 0.4s ease;
  }

  .principle-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
  }

  .principle-icon {
    margin: 0 auto var(--space-md);
    color: var(--color-blue);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .principle-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
  }

  .principle-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-body);
  }

  .cta-container {
    margin-top: var(--space-2xl);
  }

  @media (max-width: 768px) {
    .european-values {
      padding: var(--space-xl) 0;
    }

    .quotes-section {
      margin: var(--space-xl) auto;
    }

    .quote-text {
      font-size: var(--font-size-h4);
    }

    .principles-grid {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }
  }
</style>
