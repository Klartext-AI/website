<section id="offerings-listing" class="offerings-listing section">
  <div class="container">
    <div class="offerings-header fade-in text-center">
      <h1 class="offerings-page-title">{text.pageTitle}</h1>
      <p class="offerings-page-subtitle">{text.pageSubtitle}</p>
    </div>

    <div class="offerings-grid">
      {text.offerings.map((offering, index) => (
        <article class="offering-card glass-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
