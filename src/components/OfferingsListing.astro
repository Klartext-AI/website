<style>
  .offerings-listing {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .offerings-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .offerings-page-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }

  .offerings-page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-weight: 300;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .offerings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: var(--space-lg);
    max-width: 1400px;
    margin: 0 auto;
  }

  .offering-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    background: rgba(255, 255, 255, 0.55) !important;
    backdrop-filter: blur(20px) saturate(160%);
  }

  .offering-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
    background: rgba(255, 255, 255, 0.75) !important;
  }

  .offering-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
  }

  .offering-icon {
    font-size: 2.5rem;
    line-height: 1;
  }

  .offering-category {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.7rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .offering-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    line-height: 1.3;
  }

  .offering-description {
    font-size: 0.95rem;
    color: var(--color-text-body);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .offering-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .offering-highlights li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    font-size: 0.9rem;
    color: var(--color-text-body);
    line-height: 1.5;
  }

  .offering-highlights li svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .offering-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-blue);
    font-weight: 600;
    font-size: 0.9rem;
    transition: gap 0.3s ease;
    align-self: flex-start;
    margin-top: auto;
  }

  .offering-link:hover {
    gap: 0.75rem;
  }

  .offering-link svg {
    transition: transform 0.3s ease;
  }

  .offering-link:hover svg {
    transform: translateX(4px);
  }

  .offerings-cta {
    margin-top: var(--space-2xl);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-content {
    padding: var(--space-2xl);
    text-align: center;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(36, 121, 190, 0.08) 0%, rgba(76, 138, 197, 0.12) 100%),
                rgba(255, 255, 255, 0.6) !important;
    backdrop-filter: blur(20px) saturate(160%);
    border: 2px solid rgba(36, 121, 190, 0.2);
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: var(--space-md);
    letter-spacing: -0.01em;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 1rem 2.5rem;
    background: var(--color-blue);
    color: white;
    font-size: 1.0625rem;
    font-weight: 600;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(36, 121, 190, 0.25);
  }

  .cta-button:hover {
    background: var(--color-blue-accent);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(36, 121, 190, 0.35);
    gap: var(--space-md);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 1200px) {
    .offerings-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }
  }

  @media (max-width: 968px) {
    .offerings-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .offerings-listing {
      padding: var(--space-xl) 0;
    }

    .offerings-header {
      margin-bottom: var(--space-xl);
      padding-bottom: var(--space-lg);
    }

    .offerings-page-title {
      font-size: var(--font-size-h2);
    }

    .offerings-page-subtitle {
      font-size: 1.1rem;
    }

    .offerings-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .offering-card {
      padding: var(--space-md);
    }

    .offering-title {
      font-size: 1.25rem;
    }

    .offering-description {
      font-size: 0.9rem;
    }

    .offering-highlights li {
      font-size: 0.85rem;
    }

    .offerings-cta {
      margin-top: var(--space-xl);
    }

    .cta-content {
      padding: var(--space-lg);
    }

    .cta-title {
      font-size: 1.5rem;
    }

    .cta-subtitle {
      font-size: 1rem;
      margin-bottom: var(--space-lg);
    }

    .cta-button {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }
  }
</style>
