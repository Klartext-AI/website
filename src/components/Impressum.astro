        <p>{text.authority}</p>
      </div>

      <div class="impressum-section">
        <h2>{text.chamberLabel}</h2>
        <p>{text.chamber}</p>
        <p>
          <a href={text.chamberLink} target="_blank" rel="noopener noreferrer">
            {text.chamberLinkLabel}
          </a>
        </p>
      </div>

      <div class="impressum-section">
        <h2>{text.capitalLabel}</h2>
        <p>{text.capitalInfo}</p>
      </div>

      <div class="impressum-section">
        <h2>{text.ecommerceLabel}</h2>
        <p>{text.ecommerceInfo}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .impressum {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .impressum-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl);
  }

  .impressum-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-xl);
    color: var(--color-text-dark);
    text-align: center;
    letter-spacing: -0.02em;
  }

  .impressum-section {
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .impressum-section:last-child {
    border-bottom: none;
  }

  .impressum-section h2 {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-blue);
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
  }

  .impressum-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-dark);
    margin: 0;
  }

  .impressum-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .impressum-section li {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-dark);
    padding: var(--space-xs) 0;
  }

  .impressum-section a {
    color: var(--color-blue);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .impressum-address-link {
    display: inline-block;
    color: var(--color-text-dark);
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .impressum-address-link:hover {
    color: var(--color-blue);
    transform: translateX(4px);
  }

  .impressum-section a:hover {
    color: var(--color-blue-accent);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .impressum {
      padding: var(--space-xl) 0;
    }

    .impressum-content {
      padding: var(--space-md);
    }

    .impressum-title {
      font-size: var(--font-size-h2);
      margin-bottom: var(--space-lg);
    }

    .impressum-section h2 {
      font-size: 0.85rem;
    }

    .impressum-section p,
    .impressum-section li {
      font-size: 1rem;
    }
  }
</style>
