const text = content[lang];
---

<section id="blog-listing" class="blog-listing section">
  <div class="container">
    <div class="blog-header fade-in text-center">
      <h1 class="blog-page-title">{text.pageTitle}</h1>
      <p class="blog-page-subtitle">{text.pageSubtitle}</p>
    </div>

    <div class="blog-posts">
      {text.posts.map((post, index) => (
        <article class="blog-post-card glass-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <div class="post-meta">
            <span class="post-category">{post.category}</span>
            <span class="post-read-time">{post.readTime}</span>
          </div>

          <h2 class="post-title">{post.title}</h2>
          <p class="post-excerpt">{post.excerpt}</p>

          <a href={lang === 'en' ? `${BASE}en/blog/${post.id}` : `${BASE}blog/${post.id}`} class="post-link">
            {text.readMore}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 12l4-4-4-4"/>
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-listing {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .blog-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .blog-page-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }

  .blog-page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-weight: 300;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .blog-posts {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
    max-width: 1400px;
    margin: 0 auto;
  }

  .blog-post-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    background: rgba(255, 255, 255, 0.55) !important;
    backdrop-filter: blur(20px) saturate(160%);
  }

  .blog-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
    background: rgba(255, 255, 255, 0.75) !important;
  }

  .post-meta {
    display: flex;
    gap: var(--space-sm);
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.8rem;
    margin-bottom: var(--space-md);
  }

  .post-category {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.6rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .post-read-time {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    margin-left: auto;
  }

  .post-title {
    font-size: 1.35rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
    line-height: 1.3;
  }

  .post-excerpt {
    font-size: 0.95rem;
    color: var(--color-text-body);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .post-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-blue);
    font-weight: 600;
    font-size: 0.9rem;
    transition: gap 0.3s ease;
    align-self: flex-start;
    margin-top: auto;
  }

  .post-link:hover {
    gap: 0.75rem;
  }

  .post-link svg {
    transition: transform 0.3s ease;
  }

  .post-link:hover svg {
    transform: translateX(4px);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: var(--space-xl);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--color-blue);
    gap: 0.75rem;
  }

  .back-link svg {
    transform: rotate(180deg);
    transition: transform 0.3s ease;
  }

  .back-link:hover svg {
    transform: rotate(180deg) translateX(4px);
  }

  @media (max-width: 1200px) {
    .blog-posts {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 968px) {
    .blog-posts {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .blog-listing {
      padding: var(--space-xl) 0;
    }

    .blog-header {
      margin-bottom: var(--space-xl);
      padding-bottom: var(--space-lg);
    }

    .blog-page-title {
      font-size: var(--font-size-h2);
    }

    .blog-page-subtitle {
      font-size: 1.1rem;
    }

    .blog-posts {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .blog-post-card {
      padding: var(--space-md);
    }

    .post-title {
      font-size: 1.25rem;
    }

    .post-excerpt {
      font-size: 0.9rem;
    }

    .post-meta {
      gap: var(--space-xs);
    }
  }
</style>
