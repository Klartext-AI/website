---
interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;

const content = {
  de: {
    title: "Folgen Sie uns auf LinkedIn",
    subtitle: "Bleiben Sie auf dem Laufenden mit unseren neuesten Insights, Projekten und Thought Leadership"
  },
  en: {
    title: "Follow us on LinkedIn",
    subtitle: "Stay updated with our latest insights, projects and thought leadership"
  }
};

const text = content[lang];
---

<section class="linkedin-feed-section">
  <div class="container">
    <div class="linkedin-feed-header section-header text-center">
      <h2>{text.title}</h2>
      <p class="section-subtitle">{text.subtitle}</p>
    </div>

    <!-- Elfsight LinkedIn Feed | Klartext AI LinkedIn Feed -->
    <div class="linkedin-feed-wrapper">
      <script is:inline src="https://elfsightcdn.com/platform.js" async></script>
      <div class="elfsight-app-36e53acd-d2f6-4674-8492-de8f56add979" data-elfsight-app-lazy></div>
    </div>
  </div>
</section>

<style>
  .linkedin-feed-section {
    padding: 60px 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(36, 121, 190, 0.02) 100%
    );
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .linkedin-feed-header {
    text-align: center;
  }

  .linkedin-feed-header .section-subtitle {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .linkedin-feed-wrapper {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .linkedin-feed-section {
      padding: var(--space-xl) 0;
    }

    .linkedin-feed-header .section-subtitle {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .linkedin-feed-section {
      padding: var(--space-md) 0;
    }

    .container {
      padding: 0 var(--space-md);
    }

    .linkedin-feed-header .section-subtitle {
      font-size: 1.25rem;
    }
  }
</style>
