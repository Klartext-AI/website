---

<section class="offerings-preview section">
  <div class="container">
    <div class="section-header fade-in text-center">
      <h2>{text.sectionTitle}</h2>
      <p class="section-subtitle">{text.subtitle}</p>
    </div>

    <div class="offerings-grid">
      {text.offerings.map((offering, index) => (
        <article class="offering-preview-card glass-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <div class="offering-icon-large">
            <Icon name={offeringIcons[offering.id]} size={36} />
          </div>
          <h3 class="offering-preview-title">{offering.title}</h3>
          <p class="offering-preview-description">{offering.description}</p>

          <ul class="offering-preview-highlights">
            {offering.highlights.map((highlight) => (
              <li>
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
                  <path d="M3 8l3 3 7-7" stroke="var(--color-blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {highlight}
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>

    <div class="offerings-cta text-center fade-in">
      <a href={lang === 'de' ? `${BASE}offerings` : `${BASE}en/offerings`} class="btn btn-secondary">
        {text.viewAllOfferings}
      </a>
    </div>
  </div>
</section>

<style>
  .offerings-preview {
    position: relative;
    background: transparent;
  }

  .offerings-preview .section-subtitle {
    margin-left: auto;
    margin-right: auto;
    max-width: 800px;
    text-align: center;
  }

  .offerings-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
    max-width: 1480px;
    margin: 0 auto;
    margin-bottom: var(--space-xl);
  }

  .offering-preview-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.55) !important;
    backdrop-filter: blur(20px) saturate(160%);
  }

  .offering-preview-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
    background: rgba(255, 255, 255, 0.75) !important;
  }

  .offering-icon-large {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-blue);
    margin-bottom: var(--space-sm);
  }

  .offering-preview-title {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
  }

  .offering-preview-description {
    font-size: 0.9rem;
    color: var(--color-text-body);
    line-height: 1.5;
    margin-bottom: var(--space-sm);
  }

  .offering-preview-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .offering-preview-highlights li {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-xs);
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .offering-preview-highlights li svg {
    flex-shrink: 0;
  }

  .offerings-cta {
    margin-top: var(--section-cta-gap);
  }

  @media (max-width: 1200px) {
    .offerings-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .offerings-grid {
      grid-template-columns: 1fr;
    }

    .section-subtitle {
      font-size: 1.25rem;
    }

    .offering-preview-title {
      font-size: 1.25rem;
    }

    .offering-preview-description {
      font-size: 0.9rem;
    }

    .offering-icon-large {
      font-size: 2.5rem;
    }
  }
</style>
