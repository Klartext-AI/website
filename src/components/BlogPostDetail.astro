---
interface Props {
  title: string;
  excerpt: string;
  fullExcerpt: string;
  fullContent: string;
  category: string;
  readTime: string;
  date: string;
  lang?: 'de' | 'en';
}

const { title, excerpt, fullExcerpt, fullContent, category, readTime, date, lang = 'de' } = Astro.props;

const labels = {
  de: {
    backToBlog: "← Zurück zum Blog",
    category: "Kategorie",
    readTime: "Lesezeit",
    published: "Veröffentlicht"
  },
  en: {
    backToBlog: "← Back to Blog",
    category: "Category",
    readTime: "Read time",
    published: "Published"
  }
};

const text = labels[lang];
const BASE = import.meta.env.BASE_URL;
const SITE = Astro.site?.toString() ?? 'https://klartext-ai.github.io';
const canonicalHref = Astro.url?.href ?? new URL(BASE, SITE).toString();
---

<section class="blog-post-detail section">
  <div class="container">
    <a href={lang === 'en' ? `${BASE}en/blog` : `${BASE}blog`} class="back-link">
      {text.backToBlog}
    </a>

    <article class="post-content fade-in">
      <header class="post-header">
        <div class="post-meta-header">
          <span class="post-category-badge">{category}</span>
          <span class="post-meta-item">{readTime}</span>
          <span class="post-meta-item">{date}</span>
        </div>
        <h1 class="post-main-title">{title}</h1>
        <p class="post-excerpt-large">{excerpt}</p>
      </header>

      <div class="post-body">
        <div class="post-intro">
          <p class="lead-text">{fullExcerpt}</p>
        </div>

        <div class="post-main-content" set:html={fullContent} />
      </div>
    </article>
  </div>
</section>

<!-- Structured Data: BlogPosting for GEO/SEO -->
<script is:inline type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  'headline': title,
  'description': excerpt,
  'articleSection': category,
  'inLanguage': lang,
  'datePublished': date,
  'dateModified': date,
  'mainEntityOfPage': canonicalHref,
  'author': {
    '@type': 'Organization',
    'name': 'Klartext AI',
    'url': SITE
  },
  'publisher': {
    '@type': 'Organization',
    'name': 'Klartext AI',
    'logo': {
      '@type': 'ImageObject',
      'url': new URL(`${BASE}LOGO_transparent.png`, SITE).toString()
    }
  }
})}></script>

<style>
  .blog-post-detail {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-blue);
    font-size: 0.95rem;
    margin-bottom: var(--space-xl);
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .back-link:hover {
    transform: translateX(-4px);
    color: var(--color-blue-accent);
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .post-meta-header {
    display: flex;
    gap: var(--space-md);
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
    font-size: 0.9rem;
  }

  .post-category-badge {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.4rem 1rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 6px;
    font-size: 0.85rem;
  }

  .post-meta-item {
    color: var(--color-text-muted);
  }

  .post-main-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .post-excerpt-large {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .post-body {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .post-intro {
    padding: var(--space-lg);
    background: rgba(36, 121, 190, 0.05);
    border-left: 4px solid var(--color-blue);
    border-radius: 4px;
  }

  .lead-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-dark);
    margin: 0;
    font-weight: 400;
  }

  .post-main-content {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-body);
  }

  .post-main-content :global(h2),
  .post-main-content :global(h3),
  .post-main-content :global(h4) {
    color: var(--color-text-dark);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    font-weight: 500;
  }

  .post-main-content :global(h2) {
    font-size: 1.75rem;
    margin-top: var(--space-2xl);
  }

  .post-main-content :global(h3) {
    font-size: 1.5rem;
  }

  .post-main-content :global(h4) {
    font-size: 1.25rem;
    color: var(--color-blue);
  }

  .post-main-content :global(p) {
    margin-bottom: var(--space-md);
  }

  .post-main-content :global(strong) {
    color: var(--color-text-dark);
    font-weight: 600;
  }

  .post-main-content :global(ul),
  .post-main-content :global(ol) {
    margin: var(--space-md) 0;
    padding-left: var(--space-md);
  }

  .post-main-content :global(li) {
    margin-bottom: var(--space-sm);
  }

  .post-main-content :global(blockquote) {
    border-left: 4px solid var(--color-blue);
    padding-left: var(--space-lg);
    margin: var(--space-xl) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-main-content :global(code) {
    background: rgba(36, 121, 190, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  @media (max-width: 768px) {
    .blog-post-detail {
      padding: var(--space-xl) 0;
    }

    .post-main-title {
      font-size: var(--font-size-h2);
    }

    .post-excerpt-large {
      font-size: 1.1rem;
    }

    .post-main-content {
      font-size: 1rem;
    }

    .post-main-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-main-content :global(h3) {
      font-size: 1.25rem;
    }

    .post-meta-header {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }
</style>
