---
interface Props {
  title: string;
  description?: string;
  lang?: 'de' | 'en';
  alwaysShowNav?: boolean;
}

const {
  title,
  description = 'Klartext AI - Wir bauen keine Chatbots. Wir verwandeln KI in ROI.',
  lang = 'de',
  alwaysShowNav = false
} = Astro.props;

import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import CookieConsent from '../components/CookieConsent.astro';
const BASE = import.meta.env.BASE_URL;
const SITE = Astro.site?.toString() ?? 'https://klartext-ai.github.io';

// Tracking configuration (only active in production)
const isProd = import.meta.env.PROD;
const GA4_ID = import.meta.env.PUBLIC_GA4_ID;
const url = Astro.url;
// Determine canonical and language alternates
const canonicalHref = url?.href ?? SITE;
const pathname = url?.pathname ?? '/';
// Remove base from pathname to compute locale alternates reliably
const basePrefix = BASE?.endsWith('/') ? BASE : `${BASE}/`;
const relPath = pathname.startsWith(basePrefix)
  ? pathname.slice(basePrefix.length - 1) // keep leading '/'
  : pathname;
const isEN = relPath.startsWith('/en/');
const dePath = isEN ? relPath.replace(/^\/en\//, '/') : relPath;
const enPath = isEN ? relPath : (relPath === '/' ? '/en/' : `/en${relPath}`);
const deHref = new URL(`${BASE.replace(/\/$/, '')}${dePath}`, SITE).toString();
const enHref = new URL(`${BASE.replace(/\/$/, '')}${enPath}`, SITE).toString();
const locale = lang === 'en' ? 'en_US' : 'de_DE';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="generator" content={Astro.generator}>
  <meta name="robots" content="index, follow, max-image-preview:large">
  <meta name="theme-color" content="#2479BE">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Klartext AI">
  <meta property="og:url" content={canonicalHref}>
  <meta property="og:locale" content={locale}>
  <meta property="og:image" content={`${new URL(`${BASE}LOGO_transparent.png`, SITE)}`}>
  <meta property="og:image:alt" content="Klartext AI logo">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${new URL(`${BASE}LOGO_transparent.png`, SITE)}`}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${BASE}favicon.ico`}>
  <link rel="apple-touch-icon" href={`${BASE}LOGO_transparent_without_sublime.png`}>
  <link rel="canonical" href={canonicalHref}>
  <link rel="alternate" hreflang="de" href={deHref}>
  <link rel="alternate" hreflang="en" href={enHref}>
  <link rel="alternate" hreflang="x-default" href={deHref}>

  <title>{title}</title>

  <!-- Custom Cookie Consent Styling -->
  <style is:global>
    /* Vanilla CookieConsent theming to align with Klartext glass/blue look */
    #cc-main {
      font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'SF Pro Text', 'Segoe UI', system-ui, sans-serif;
      z-index: 9999;
      /* Theme tokens inspired by cookieconsent light-funky, tuned to our brand blues */
      --cc-bg: rgba(255, 255, 255, 0.9);
      --cc-primary-color: var(--color-blue);
      --cc-secondary-color: var(--color-blue);
      --cc-btn-primary-bg: var(--color-blue);
      --cc-btn-primary-color: #fff;
      --cc-btn-primary-hover-bg: rgba(36, 121, 190, 0.9);
      --cc-btn-primary-hover-color: #fff;
      --cc-btn-primary-border-color: transparent;
      --cc-btn-primary-hover-border-color: transparent;
      --cc-btn-secondary-bg: rgba(36, 121, 190, 0.08);
      --cc-btn-secondary-color: var(--color-blue);
      --cc-btn-secondary-hover-bg: rgba(36, 121, 190, 0.12);
      --cc-btn-secondary-hover-color: var(--color-blue);
      --cc-btn-secondary-border-color: transparent;
      --cc-btn-secondary-hover-border-color: transparent;
      --cc-cookie-category-block-bg: rgba(255, 255, 255, 0.95);
      --cc-cookie-category-block-border: rgba(36, 121, 190, 0.15);
      --cc-cookie-category-block-hover-bg: rgba(255, 255, 255, 1);
      --cc-cookie-category-block-hover-border: rgba(36, 121, 190, 0.2);
      --cc-footer-bg: transparent;
      --cc-footer-border-color: rgba(36, 121, 190, 0.0);
      --cc-btn-border-radius: 12px;
      --cc-modal-border-radius: 16px;
    }

    #cc-main .cm {
      background: rgba(255, 255, 255, 0.5) !important;
      backdrop-filter: blur(24px) saturate(180%) !important;
      -webkit-backdrop-filter: blur(24px) saturate(180%) !important;
      border: 1px solid var(--glass-border);
      box-shadow: var(--glass-shadow);
      color: var(--color-text-body);
      border-radius: 16px;
    }

    #cc-main .pm {
      background: rgba(255, 255, 255, 1) !important;
      backdrop-filter: none !important;
      -webkit-backdrop-filter: none !important;
      border: 1px solid var(--glass-border);
      box-shadow: var(--glass-shadow);
      color: var(--color-text-body);
      border-radius: 16px;
    }

    #cc-main .cm__title,
    #cc-main .pm__title {
      color: var(--color-text-dark);
      letter-spacing: -0.01em;
    }

    #cc-main .cm__desc,
    #cc-main .pm__desc,
    #cc-main .pm__section-desc {
      color: var(--color-text-body);
      line-height: 1.55;
    }

    #cc-main .cc__link,
    #cc-main .pm a {
      color: var(--color-blue);
    }

    #cc-main .cm__btns .cc-btn,
    #cc-main .pm__btn-group .cc-btn,
    #cc-main .cm__btn {
      border: none !important;
      border-radius: 12px;
      padding: 0.75rem 1.4rem;
      font-weight: 600;
      letter-spacing: 0.01em;
    }

    #cc-main .cc-btn.cc-btn-primary,
    #cc-main .cm__btns .cc-btn.cc-btn-primary {
      background: var(--color-blue);
      color: #fff !important;
      border: none !important;
      outline: none !important;
      box-shadow: 0 10px 22px -10px rgba(36, 121, 190, 0.35);
    }

    #cc-main .cc-btn.cc-btn-primary:hover {
      background: rgba(36, 121, 190, 0.92);
      transform: translateY(-1px);
      border: none !important;
    }

    #cc-main .cc-btn.cc-btn-secondary,
    #cc-main .cc-btn.cc-btn-outline,
    #cc-main .cm__btns .cc-btn.cc-btn-secondary,
    #cc-main .cm__btns .cc-btn.cc-btn-outline {
      background: rgba(36, 121, 190, 0.08);
      color: var(--color-blue) !important;
      border: none !important;
      outline: none !important;
      box-shadow: none;
    }

    #cc-main .cc-btn.cc-btn-secondary:hover,
    #cc-main .cc-btn.cc-btn-outline:hover {
      background: rgba(36, 121, 190, 0.12);
      border: none !important;
      color: var(--color-blue);
    }

    #cc-main .pm__badge {
      background: rgba(36, 121, 190, 0.1);
      color: var(--color-blue);
    }

    #cc-main .cm__btns,
    #cc-main .pm__btns {
      border-top: 1px solid rgba(36, 121, 190, 0.15) !important;
      padding-top: 1rem !important;
    }

    /* Slide-in animation for consent modal */
    #cc-main .cm {
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s ease;
    }

    #cc-main .cm.cc-hidden {
      transform: translateY(150%) !important;
      opacity: 0 !important;
      pointer-events: none;
    }

    #cc-main .cm:not(.cc-hidden) {
      transform: translateY(0) !important;
      opacity: 1 !important;
    }

    /* Preferences modal section styling - clean white backgrounds */
    #cc-main .pm__section {
      background: rgba(255, 255, 255, 0.98) !important;
      border: 1px solid rgba(36, 121, 190, 0.12) !important;
      padding: 1.25rem !important;
      border-radius: 12px !important;
    }

    #cc-main .pm__section:hover {
      background: rgba(255, 255, 255, 1) !important;
    }

    #cc-main .pm__section-title {
      margin-bottom: 0.5rem !important;
    }

    #cc-main .pm__section-desc {
      margin-bottom: 0 !important;
    }

    /* Mobile responsive adjustments */
    @media (max-width: 768px) {
      #cc-main .cm__title,
      #cc-main .cm__desc {
        text-align: center !important;
        text-wrap: balance !important;
      }
    }
  </style>

  <!-- Structured Data: Organization + WebSite + WebPage -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@graph': [
      {
        '@type': 'Organization',
        'name': 'Klartext AI',
        'url': SITE,
        'logo': new URL(`${BASE}LOGO_transparent.png`, SITE).toString(),
        'sameAs': [
          'https://www.linkedin.com/company/klartext-ai/'
        ],
        'contactPoint': [{
          '@type': 'ContactPoint',
          'contactType': lang === 'en' ? 'customer support' : 'Kundensupport',
          'email': 'office@klartext-ai.com',
          'telephone': '+43 660 81010 67',
          'areaServed': ['AT','DE','EU'],
          'availableLanguage': ['de','en']
        }]
      },
      {
        '@type': 'WebSite',
        'name': 'Klartext AI',
        'url': SITE,
        'inLanguage': lang,
      },
      {
        '@type': 'WebPage',
        'url': canonicalHref,
        'name': title,
        'description': description,
        'inLanguage': lang
      }
    ]
  })}></script>


</head>
<body>
  <Navigation lang={lang} alwaysVisible={alwaysShowNav} />
  {isProd && GA4_ID && <CookieConsent lang={lang} gaId={GA4_ID} />}
  <slot />

  <!-- Scroll Animation Script -->
  <script>
    // Run callback whether DOMContentLoaded already fired or not
    const runOnReady = (callback: () => void) => {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', callback, { once: true });
      } else {
        callback();
      }
    };

    // Intersection Observer for fade-in animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    // Observe all elements with fade-in class
    runOnReady(() => {
      const fadeElements = document.querySelectorAll('.fade-in');

      if (!fadeElements.length) return;

      if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, observerOptions);

        fadeElements.forEach(el => {
          // Check if element is already in viewport on page load
          const rect = el.getBoundingClientRect();
          const windowHeight = window.innerHeight || document.documentElement.clientHeight;
          const windowWidth = window.innerWidth || document.documentElement.clientWidth;

          // Element is considered "in viewport" if it's at least partially visible
          const isInViewport = (
            rect.top < windowHeight &&
            rect.bottom > 0 &&
            rect.left < windowWidth &&
            rect.right > 0
          );

          // If already in viewport, make it visible immediately
          if (isInViewport) {
            el.classList.add('visible');
          }

          // Observe for future scroll events
          observer.observe(el);
        });
      } else {
        // Fallback for browsers without IntersectionObserver
        fadeElements.forEach(el => el.classList.add('visible'));
      }
    });
  </script>
</body>
</html>
