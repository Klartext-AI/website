---
interface Props {
  title: string;
  description?: string;
  lang?: 'de' | 'en';
  alwaysShowNav?: boolean;
}

const {
  title,
  description = 'Klartext AI - Wir bauen keine Chatbots. Wir verwandeln KI in ROI.',
  lang = 'de',
  alwaysShowNav = false
} = Astro.props;

import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
const BASE = import.meta.env.BASE_URL;
const SITE = Astro.site?.toString() ?? 'https://klartext-ai.github.io';

// Tracking configuration (only active in production)
const isProd = import.meta.env.PROD;
const COOKIEBOT_ID = import.meta.env.PUBLIC_COOKIEBOT_ID;
const GA4_ID = import.meta.env.PUBLIC_GA4_ID;
const url = Astro.url;
// Determine canonical and language alternates
const canonicalHref = url?.href ?? SITE;
const pathname = url?.pathname ?? '/';
// Remove base from pathname to compute locale alternates reliably
const basePrefix = BASE?.endsWith('/') ? BASE : `${BASE}/`;
const relPath = pathname.startsWith(basePrefix)
  ? pathname.slice(basePrefix.length - 1) // keep leading '/'
  : pathname;
const isEN = relPath.startsWith('/en/');
const dePath = isEN ? relPath.replace(/^\/en\//, '/') : relPath;
const enPath = isEN ? relPath : (relPath === '/' ? '/en/' : `/en${relPath}`);
const deHref = new URL(`${BASE.replace(/\/$/, '')}${dePath}`, SITE).toString();
const enHref = new URL(`${BASE.replace(/\/$/, '')}${enPath}`, SITE).toString();
const locale = lang === 'en' ? 'en_US' : 'de_DE';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="generator" content={Astro.generator}>
  <meta name="robots" content="index, follow, max-image-preview:large">
  <meta name="theme-color" content="#2479BE">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Klartext AI">
  <meta property="og:url" content={canonicalHref}>
  <meta property="og:locale" content={locale}>
  <meta property="og:image" content={`${new URL(`${BASE}LOGO_transparent.png`, SITE)}`}>
  <meta property="og:image:alt" content="Klartext AI logo">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${new URL(`${BASE}LOGO_transparent.png`, SITE)}`}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${BASE}favicon.ico`}>
  <link rel="apple-touch-icon" href={`${BASE}LOGO_transparent_without_sublime.png`}>
  <link rel="canonical" href={canonicalHref}>
  <link rel="alternate" hreflang="de" href={deHref}>
  <link rel="alternate" hreflang="en" href={enHref}>
  <link rel="alternate" hreflang="x-default" href={deHref}>

  <title>{title}</title>

  <!-- Cookie Consent & Analytics (Production Only) -->
  {isProd && COOKIEBOT_ID && (
    <>
      {/* Cookiebot - MUST be first script for proper consent management */}
      <script
        id="Cookiebot"
        is:inline
        src="https://consent.cookiebot.com/uc.js"
        data-cbid={COOKIEBOT_ID}
        data-blockingmode="auto"
        type="text/javascript">
      </script>

      {/* Custom script to control banner visibility on scroll */}
      <script is:inline>
        // Hide Cookiebot banner initially, show on scroll
        (function() {
          let hasShownBanner = false;

          function hideBanner() {
            const banner = document.getElementById('CybotCookiebotDialog');
            if (banner && !hasShownBanner) {
              banner.style.display = 'none';
            }
          }

          function showBanner() {
            const banner = document.getElementById('CybotCookiebotDialog');
            if (banner && !hasShownBanner) {
              banner.style.display = 'block';
              hasShownBanner = true;
            }
          }

          // Hide banner on page load
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', hideBanner);
          } else {
            hideBanner();
          }

          // Show banner when scrolling past 100px
          window.addEventListener('scroll', function() {
            if (window.scrollY > 100 && !hasShownBanner) {
              showBanner();
            }
          });

          // Observe for when Cookiebot creates the dialog (in case it loads after scroll)
          const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
              mutation.addedNodes.forEach(function(node) {
                if (node.id === 'CybotCookiebotDialog') {
                  if (window.scrollY <= 100 && !hasShownBanner) {
                    node.style.display = 'none';
                  }
                }
              });
            });
          });

          observer.observe(document.body, { childList: true, subtree: true });
        })();
      </script>
    </>
  )}

  {isProd && GA4_ID && COOKIEBOT_ID && (
    <>
      {/* Google Analytics 4 - Controlled by Cookiebot via prior consent */}
      <script
        async
        is:inline
        type="text/plain"
        data-cookieconsent="statistics"
        src={`https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`}>
      </script>

      <script
        is:inline
        type="text/plain"
        data-cookieconsent="statistics"
        set:html={`
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', '${GA4_ID}', {
            anonymize_ip: true
          });
        `}>
      </script>
    </>
  )}

  <!-- Structured Data: Organization + WebSite + WebPage -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@graph': [
      {
        '@type': 'Organization',
        'name': 'Klartext AI',
        'url': SITE,
        'logo': new URL(`${BASE}LOGO_transparent.png`, SITE).toString(),
        'sameAs': [
          'https://www.linkedin.com/company/klartext-ai/'
        ],
        'contactPoint': [{
          '@type': 'ContactPoint',
          'contactType': lang === 'en' ? 'customer support' : 'Kundensupport',
          'email': 'office@klartext-ai.com',
          'telephone': '+43 660 81010 67',
          'areaServed': ['AT','DE','EU'],
          'availableLanguage': ['de','en']
        }]
      },
      {
        '@type': 'WebSite',
        'name': 'Klartext AI',
        'url': SITE,
        'inLanguage': lang,
      },
      {
        '@type': 'WebPage',
        'url': canonicalHref,
        'name': title,
        'description': description,
        'inLanguage': lang
      }
    ]
  })}></script>

  <!-- Cookiebot Banner Custom Styling -->
  <style is:global>
    /* Main dialog container - glassmorphism style */
    #CybotCookiebotDialog {
      background: var(--glass-bg) !important;
      backdrop-filter: var(--glass-blur) !important;
      -webkit-backdrop-filter: var(--glass-blur) !important;
      border: 1px solid var(--glass-border) !important;
      box-shadow: var(--glass-shadow) !important;
      border-radius: 16px !important;
      font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'SF Pro Text', 'Segoe UI', system-ui, sans-serif !important;
      max-width: 520px !important;
      padding: var(--space-md) !important;
      z-index: 999 !important;
      animation: slideUpCookie 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards !important;
      max-height: 60vh;
    }

    /* Body content area */
    #CybotCookiebotDialogBodyContent {
      font-size: 1rem !important;
      line-height: 1.6 !important;
      color: var(--color-text-body) !important;
      font-weight: 400 !important;
    }

    /* Headline/title */
    #CybotCookiebotDialogBodyContentTitle {
      font-size: 1.5rem !important;
      font-weight: 500 !important;
      color: var(--color-text-dark) !important;
      margin-bottom: var(--space-sm) !important;
      letter-spacing: -0.01em !important;
    }

    /* Links within the banner */
    #CybotCookiebotDialog a {
      color: var(--color-blue) !important;
      text-decoration: none !important;
      border-bottom: 1px solid transparent !important;
      transition: border-color 0.3s ease !important;
    }

    #CybotCookiebotDialog a:hover {
      border-bottom-color: var(--color-blue) !important;
    }

    #CybotCookiebotDialog a::after {
      border-color: var(--color-blue) !important;
    }

    /* Button styling - primary accept button */
    #CybotCookiebotDialogFooter #CybotCookiebotDialogBodyButtonAccept, #CybotCookiebotDialogFooter #CybotCookiebotDialogBodyLevelButtonAccept, #CybotCookiebotDialogFooter #CybotCookiebotDialogBodyLevelButtonLevelOptinAllowAll {
      background: var(--color-blue) !important;
      color: white !important;
      border: none !important;
      border-radius: 12px !important;
      padding: 0.75rem 1.5rem !important;
      font-size: 1rem !important;
      font-weight: 500 !important;
      cursor: pointer !important;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
      box-shadow: 0 4px 12px rgba(36, 121, 190, 0.2) !important;
    }

    #CybotCookiebotDialogBodyLevelButtonLevelOptinAllowAll:hover,
    .CybotCookiebotDialogBodyButton[data-action="accept-all"]:hover {
      background: rgba(36, 121, 190, 0.9) !important;
      transform: translateY(-2px) !important;
      box-shadow: 0 8px 20px rgba(36, 121, 190, 0.3) !important;
    }

    #CybotCookiebotDialogFooter .CybotCookiebotDialogBodyButton {
      background: transparent !important;
      color: var(--color-blue) !important;
      border: 2px solid var(--color-blue) !important;
      border-radius: 12px !important;
      padding: 0.75rem 1.5rem !important;
      font-size: 1rem !important;
      font-weight: 500 !important;
      cursor: pointer !important;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    }

    #CybotCookiebotDialogFooter .CybotCookiebotDialogBodyButton:hover {
      background: rgba(36, 121, 190, 0.05) !important;
      border-color: var(--color-blue-accent) !important;
      color: var(--color-blue) !important;
    }

    /* Button container spacing */
    #CybotCookiebotDialogBodyLevelButtons {
      display: flex !important;
      gap: var(--space-sm) !important;
      margin-top: var(--space-md) !important;
      flex-wrap: wrap !important;
    }

    /* Details/expanded view styling */
    #CybotCookiebotDialogDetail {
      background: rgba(255, 255, 255, 0.5) !important;
      border-radius: 12px !important;
      padding: var(--space-md) !important;
      margin-top: var(--space-md) !important;
    }

    /* Checkbox styling in details view */
    .CybotCookiebotDialogBodyLevelButtonWrapper input[type="checkbox"] {
      accent-color: var(--color-blue) !important;
      width: 20px !important;
      height: 20px !important;
      cursor: pointer !important;
    }

    /* Tab buttons in details view */
    .CybotCookiebotDialogDetailBodyContentTab {
      background: transparent !important;
      border: none !important;
      border-bottom: 2px solid transparent !important;
      color: var(--color-text-muted) !important;
      padding: 0.5rem 1rem !important;
      font-weight: 500 !important;
      transition: all 0.3s ease !important;
    }

    .CybotCookiebotDialogDetailBodyContentTab[aria-selected="true"] {
      border-bottom-color: var(--color-blue) !important;
      color: var(--color-blue) !important;
    }

    .CybotCookiebotDialogDetailBodyContentTab:hover {
      color: var(--color-blue) !important;
    }

    /* Close button (X) styling if present */
    #CybotCookiebotDialogBodyButtonClose {
      background: transparent !important;
      border: none !important;
      color: var(--color-text-muted) !important;
      font-size: 1.5rem !important;
      cursor: pointer !important;
      transition: color 0.3s ease !important;
      padding: 0.25rem !important;
    }

    #CybotCookiebotDialogBodyButtonClose:hover {
      color: var(--color-blue) !important;
    }


    #CybotCookiebotDialog .CybotCookiebotScrollContainer .CybotCookiebotScrollbarContainer {
        background: transparent !important;
    }

    .CybotCookiebotFader, .CybotCookiebotFader.CybotCookiebotDialogActive {
      background-image: linear-gradient(to bottom,  transparent, transparent) !important;
    }

    #CybotCookiebotDialog .CybotCookiebotScrollContainer, #CybotCookiebotDialogHeader, #CybotCookiebotDialog .CookieCard {
      border-color: transparent !important;
    }


    #CybotCookiebotDialogNav {
      border-color: rgba(255,255,255, 0.2) !important;
    }

    @keyframes slideUpCookie {
        0% {
            opacity: 0;
            transform: translate(-50%, 50%)
        }

        to {
            opacity: 1;
            transform: translate(-50%, -100%)
        }
    }

    @media(max-width: 1280px){
        @keyframes slideUpCookie {
            0% {
                opacity: 0;
                transform: translate(-50%, 50%)
            }
        
            to {
                opacity: 1;
                transform: translate(-50%, -45%)
            }
        }
    }

    /* Mobile responsive adjustments */
    @media (max-width: 768px) {
      #CybotCookiebotDialog {
        max-width: calc(100vw - var(--space-md) * 2) !important;
        padding: var(--space-sm) !important;
        border-radius: 12px !important;
      }

      #CybotCookiebotDialogBodyContentTitle {
        font-size: 1.25rem !important;
      }

      #CybotCookiebotDialogBodyLevelButtons {
        flex-direction: column !important;
      }

      #CybotCookiebotDialogBodyLevelButtonLevelOptinAllowAll,
      #CybotCookiebotDialogBodyLevelButtonLevelOptinDeclineAll,
      #CybotCookiebotDialogBodyLevelButtonLevelOptinAllowallSelection,
      .CybotCookiebotDialogBodyButton {
        width: 100% !important;
        justify-content: center !important;
      }
    }
  </style>
</head>
<body>
  <Navigation lang={lang} alwaysVisible={alwaysShowNav} />
  <slot />

  <!-- Scroll Animation Script -->
  <script>
    // Intersection Observer for fade-in animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    // Observe all elements with fade-in class
    document.addEventListener('DOMContentLoaded', () => {
      const fadeElements = document.querySelectorAll('.fade-in');
      fadeElements.forEach(el => {
        // Check if element is already in viewport on page load
        const rect = el.getBoundingClientRect();
        const windowHeight = window.innerHeight || document.documentElement.clientHeight;
        const windowWidth = window.innerWidth || document.documentElement.clientWidth;

        // Element is considered "in viewport" if it's at least partially visible
        const isInViewport = (
          rect.top < windowHeight &&
          rect.bottom > 0 &&
          rect.left < windowWidth &&
          rect.right > 0
        );

        // If already in viewport, make it visible immediately
        if (isInViewport) {
          el.classList.add('visible');
        }

        // Observe for future scroll events
        observer.observe(el);
      });
    });
  </script>
</body>
</html>
