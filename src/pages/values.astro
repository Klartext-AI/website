    primaryCTA={content.ctaButton}
    primaryLink={`${BASE}blog`}
    showSecondary={false}
  />
  <Footer lang="de" />
</BaseLayout>

<style>
  .values-page {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .values-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .values-page-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }

  .values-page-subtitle {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    font-weight: 300;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .values-intro {
    max-width: 900px;
    margin: 0 auto var(--space-2xl);
    padding: var(--space-lg);
    background: rgba(255, 255, 255, 0.65) !important;
    backdrop-filter: blur(20px) saturate(160%);
  }

  .intro-text {
    font-size: 1.15rem;
    color: var(--color-text-body);
    line-height: 1.8;
    margin: 0;
  }

    .values-posts {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: var(--space-lg);
      max-width: 1480px;
      margin: 0 auto var(--space-2xl);
    }

  .value-post-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    background: rgba(255, 255, 255, 0.55) !important;
    backdrop-filter: blur(20px) saturate(160%);
    position: relative;
  }

    .value-post-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
      background: rgba(255, 255, 255, 0.75) !important;
    }
  
    .post-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: var(--color-blue);
      margin-bottom: var(--space-sm);
      line-height: 1;
    }

  .post-meta {
    display: flex;
    gap: var(--space-sm);
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.8rem;
    margin-bottom: var(--space-md);
  }

  .post-category {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.6rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .post-read-time {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    margin-left: auto;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
    line-height: 1.3;
  }

  .post-excerpt {
    font-size: 1rem;
    color: var(--color-text-body);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .post-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-blue);
    font-weight: 600;
    font-size: 0.95rem;
    transition: gap 0.3s ease;
    align-self: flex-start;
    margin-top: auto;
  }

  .post-link:hover {
    gap: 0.75rem;
  }

  .post-link svg {
    transition: transform 0.3s ease;
  }

  .post-link:hover svg {
    transform: translateX(4px);
  }



  @media (max-width: 1200px) {
    .values-posts {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 968px) {
    .values-posts {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .values-page {
      padding: var(--space-xl) 0;
    }

    .values-header {
      margin-bottom: var(--space-lg);
      padding-bottom: var(--space-md);
    }

    .values-page-title {
      font-size: var(--font-size-h2);
    }

    .values-page-subtitle {
      font-size: 1.2rem;
    }

    .values-intro {
      padding: var(--space-md);
      margin-bottom: var(--space-xl);
    }

    .intro-text {
      font-size: 1rem;
    }

    .values-posts {
      grid-template-columns: 1fr;
      gap: var(--space-md);
      margin-bottom: var(--space-xl);
    }

    .value-post-card {
      padding: var(--space-md);
    }

    .post-title {
      font-size: 1.3rem;
    }

    .post-excerpt {
      font-size: 0.95rem;
    }

  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }
</style>

<script>
  // Intersection Observer for fade-in animations
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (!entry.isIntersecting) {
          return;
        }

        const element = entry.target as HTMLElement;
        element.style.opacity = '1';
        element.style.transform = 'translateY(0)';
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    fadeElements.forEach(el => observer.observe(el));
  });
</script>
