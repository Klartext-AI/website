const valueIcons = {
  'domain-driven-design-rfu': 'domain',
  'evaluation-key-to-ai': 'evaluation',
  'end-to-end-ownership': 'route',
  'privacy-by-design': 'shield',
  'european-ai-sovereignty': 'users'
} as const;

// Design principles shown as cards (subset)
const designPrincipleIds = [
  'domain-driven-design-rfu',
  'evaluation-key-to-ai',
  'privacy-by-design'
];

const designPrinciples = content.valuePosts.filter((post) =>
  designPrincipleIds.includes(post.id)
);
---

<BaseLayout title={title} description={description} lang="en" alwaysShowNav={true}>
  <section class="values-page section">
    <div class="container">
      <div class="values-header fade-in text-center">
        <h1 class="values-page-title">{content.pageTitle}</h1>
        <p class="values-page-subtitle">{content.pageSubtitle}</p>
      </div>

      {/* Core Values Overview under heading */}
      <section class="core-values-overview fade-in">
        <div class="core-values-grid">
          {content.cards.map((card, index) => (
            <a
              href={`${BASE}${card.link}`}
              class="glass-card core-value-card"
            >
              <div class="core-card-header">
                <div class="core-card-icon">
                  {index === 0 && (
                    <Icon name="users" size={40} />
                  )}
                  {index === 1 && (
                    <Icon name="rocket" size={40} />
                  )}
                  {index === 2 && (
                    <Icon name="graduation" size={40} />
                  )}
                </div>
                <h3 class="core-card-title">{card.title}</h3>
                <p class="core-card-short">{card.short}</p>
              </div>
              <ul class="core-card-bullets">
                {card.bullets.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
              <div class="core-card-cta">
                <span>{content.readMore}</span>
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M6 12l4-4-4-4" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </section>

      {/* Transition to design principles */}
      <div class="values-transition text-center fade-in">
        <p>
          From these values, we derive our design principles â€“ the technical
          guardrails we use to design, evaluate, and run AI systems in practice.
        </p>
      </div>

      {/* Design Principles Section */}
      <section class="design-principles-section">
        <div class="section-header text-center fade-in">
          <h2 class="design-principles-title">{content.designPrinciplesTitle}</h2>
          <p class="design-principles-subtitle">
            {content.designPrinciplesSubtitle}
          </p>
        </div>

        <div class="values-posts principles-grid">
          {designPrinciples.map((post, index) => (
            <article
              class="value-post-card glass-card fade-in"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="post-icon">
                <Icon name={valueIcons[post.id]} size={32} />
              </div>

              <div class="post-meta">
                <span class="post-category">{post.category}</span>
                <span class="post-read-time">{post.readTime}</span>
              </div>

              <h2 class="post-title">{post.title}</h2>
              <p class="post-excerpt">{post.excerpt}</p>

              <a href={`${BASE}en/blog/${post.id}`} class="post-link">
                {content.readMore}
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M6 12l4-4-4-4" />
                </svg>
              </a>
            </article>
          ))}
        </div>
      </section>

      {/* Scrolling Blog Impact Section */}
      <section class="values-blog-impact">
        <div class="container-full">
          <div class="section-header text-center fade-in">
            <h2 class="values-blog-title">{content.blogImpactTitle}</h2>
            <p class="values-blog-subtitle">
              {content.blogImpactSubtitle}
            </p>
          </div>

          <div class="values-blog-glass-container">
            <div class="values-blog-banner-wrapper">
              <div class="values-blog-banner">
                {/* First set of blog cards */}
                {content.blogPosts.map((post) => (
                  <article class="values-blog-item">
                    <div class="values-blog-card">
                      <div class="values-blog-meta">
                        <span class="values-blog-category">
                          {post.category}
                        </span>
                        <span class="values-blog-readtime">
                          {post.readTime}
                        </span>
                      </div>
                      <h3 class="values-blog-card-title">{post.title}</h3>
                      <p class="values-blog-card-excerpt">
                        {post.excerpt}
                      </p>
                      <a
                        href={`${BASE}en/blog/${post.id}`}
                        class="values-blog-link"
                      >
                        {content.readMore}
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 16 16"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M6 12l4-4-4-4" />
                        </svg>
                      </a>
                    </div>
                  </article>
                ))}

                {/* Duplicate set for seamless loop */}
                {content.blogPosts.map((post) => (
                  <article class="values-blog-item">
                    <div class="values-blog-card">
                      <div class="values-blog-meta">
                        <span class="values-blog-category">
                          {post.category}
                        </span>
                        <span class="values-blog-readtime">
                          {post.readTime}
                        </span>
                      </div>
                      <h3 class="values-blog-card-title">{post.title}</h3>
                      <p class="values-blog-card-excerpt">
                        {post.excerpt}
                      </p>
                      <a
                        href={`${BASE}en/blog/${post.id}`}
                        class="values-blog-link"
                      >
                        {content.readMore}
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 16 16"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M6 12l4-4-4-4" />
                        </svg>
                      </a>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          </div>

          
        </div>
      </section>
    </div>
  </section>

  <FinalCTA
    lang="en"
    headline={content.ctaTitle}
    subheadline={content.ctaText}
    primaryCTA={content.ctaButton}
    primaryLink={`${BASE}en/blog`}
    showSecondary={false}
  />
  <Footer lang="en" />
</BaseLayout>

<style>
  .values-page {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
    background: transparent;
  }

  .values-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid rgba(36, 121, 190, 0.1);
  }

  .values-page-title {
    font-size: var(--font-size-h1);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }

  .values-page-subtitle {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    font-weight: 300;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Core values overview */

  .core-values-overview {
    margin: var(--space-2xl) 0 var(--space-xl);
  }

  .core-values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-md);
    max-width: 1100px;
    margin: 0 auto;
  }

  .core-value-card {
    padding: var(--space-md);
    background: rgba(255, 255, 255, 0.65) !important;
    backdrop-filter: blur(18px) saturate(160%);
    border-radius: 18px;
    text-decoration: none;
    color: inherit;
    transition: all 0.35s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .core-value-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 14px 32px -10px rgba(36, 121, 190, 0.3);
    background: rgba(255, 255, 255, 0.85) !important;
  }

  .core-card-header {
    text-align: left;
    margin-bottom: var(--space-sm);
  }

  .core-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    color: var(--color-blue);
    margin: 0 0 var(--space-xs);
  }

  .core-card-title {
    font-size: 1.3rem;
    font-weight: 500;
    margin-bottom: 0.2rem;
    color: var(--color-text-dark);
  }

  .core-card-short {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .core-card-bullets {
    list-style: none;
    padding-left: 0;
    margin: var(--space-sm) 0 0;
    font-size: 0.9rem;
    color: var(--color-text-body);
  }

  .core-card-bullets li {
    position: relative;
    padding-left: 1.2rem;
    margin-bottom: 0.3rem;
  }

  .core-card-bullets li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    top: 0.1rem;
    color: var(--color-blue);
    font-size: 1rem;
  }

  .core-card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    margin-top: auto;
    padding-top: var(--space-sm);
    font-size: 0.95rem;
    color: var(--color-blue);
    font-weight: 500;
  }

  .core-card-cta svg {
    transition: transform 0.2s ease;
  }

  .core-value-card:hover .core-card-cta svg {
    transform: translateX(4px);
  }

  .values-transition {
    max-width: 720px;
    margin: 0 auto var(--space-2xl);
  }

  .values-transition p {
    font-size: 1rem;
    color: var(--color-text-body);
    line-height: 1.7;
    margin: 0;
  }

  .design-principles-section {
    margin-bottom: var(--space-2xl);
  }

  .design-principles-title {
    font-size: var(--font-size-h2);
    margin-bottom: var(--space-xs);
  }

  .design-principles-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
  }

  .values-posts.principles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-lg);
    max-width: 1480px;
    margin: var(--space-xl) auto var(--space-2xl);
  }

  .value-post-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    background: rgba(255, 255, 255, 0.55) !important;
    backdrop-filter: blur(20px) saturate(160%);
    position: relative;
  }

  .value-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px -10px rgba(36, 121, 190, 0.3);
    background: rgba(255, 255, 255, 0.75) !important;
  }

  .post-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-blue);
    margin-bottom: var(--space-sm);
    line-height: 1;
  }

  .post-meta {
    display: flex;
    gap: var(--space-sm);
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.8rem;
    margin-bottom: var(--space-md);
  }

  .post-category {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.6rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .post-read-time {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    margin-left: auto;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
    line-height: 1.3;
  }

  .post-excerpt {
    font-size: 1rem;
    color: var(--color-text-body);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .post-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-blue);
    font-weight: 600;
    font-size: 0.95rem;
    transition: gap 0.3s ease;
    align-self: flex-start;
    margin-top: auto;
  }

  .post-link:hover {
    gap: 0.75rem;
  }

  .post-link svg {
    transition: transform 0.3s ease;
  }

  .post-link:hover svg {
    transform: translateX(4px);
  }

  /* Blog impact scrolling section */

  .values-blog-impact {
    margin-bottom: var(--space-2xl);
  }

  .container-full {
    width: 100%;
  }

  .values-blog-title {
    font-size: var(--font-size-h2);
    font-weight: 300;
    margin-bottom: var(--space-sm);
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }

  .values-blog-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
  }

  .values-blog-glass-container {
    max-width: 1480px;
    margin: var(--space-xl) auto 0;
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(18px) saturate(160%);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 8px 24px -6px rgba(36, 121, 190, 0.18);
    border-radius: 24px;
    position: relative;
    overflow: hidden;
  }

  .values-blog-banner-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: var(--space-md) 0;
  }

  .values-blog-banner {
    display: flex;
    gap: var(--space-md);
    width: max-content;
    will-change: transform;
    animation: blogScroll 45s linear infinite;
  }

  .values-blog-banner:hover {
    animation-play-state: paused;
  }

  .values-blog-item {
    flex-shrink: 0;
    min-width: 280px;
    max-width: 360px;
    padding: var(--space-sm) var(--space-sm);
  }

  .values-blog-card {
    background: rgba(255, 255, 255, 0.85);
    border-radius: 16px;
    padding: var(--space-md);
    box-shadow: 0 8px 24px -6px rgba(36, 121, 190, 0.18);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .values-blog-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    font-size: 0.8rem;
  }

  .values-blog-category {
    font-weight: 600;
    color: var(--color-blue);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.6rem;
    background: rgba(36, 121, 190, 0.08);
    border-radius: 999px;
    font-size: 0.75rem;
  }

  .values-blog-readtime {
    color: var(--color-text-muted);
    margin-left: auto;
    font-size: 0.8rem;
  }

  .values-blog-card-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text-dark);
  }

  .values-blog-card-excerpt {
    font-size: 0.9rem;
    color: var(--color-text-body);
    line-height: 1.5;
    margin-bottom: var(--space-sm);
    flex-grow: 1;
