---
import BaseLayout from '../layouts/BaseLayout.astro';
import OfferingsListing from '../components/OfferingsListing.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';

const title = 'Unsere Angebote - Klartext AI';
const description = 'Maßgeschneiderte AI-Lösungen und Services für Ihren Erfolg - von Workshops bis zu kundenspezifischen Projekten.';
---

<BaseLayout title={title} description={description} lang="de" alwaysShowNav={true}>
  <OfferingsListing lang="de" />
  <FinalCTA
    lang="de"
    headline="Interesse an einem Angebot?"
    subheadline="Kontaktieren Sie uns für ein unverbindliches Erstgespräch."
    primaryCTA="Jetzt Kontakt aufnehmen"
    showSecondary={false}
  />
  <Footer lang="de" />
</BaseLayout>
