<style>
  .karriere-page {
    min-height: calc(100vh - 80px);
    padding: calc(60px + var(--space-lg)) 0 var(--space-lg);
    background: transparent;
    margin-top: var(--space-xl);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    margin-bottom: var(--space-md);
    color: var(--color-text-dark);
  }

  .tagline {
    font-size: 1.5rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .vision-section {
    margin-bottom: var(--space-2xl);
  }

  .vision-content {
    padding: var(--space-xl);
    text-align: center;
    border-radius: 16px;
  }

  .vision-content p {
    font-size: 1.375rem;
    line-height: 1.8;
    color: var(--color-text-body);
    margin-bottom: var(--space-sm);
  }

  .vision-intro {
    font-size: 1.5rem !important;
    font-weight: 500;
    color: var(--color-blue);
    margin-bottom: var(--space-md) !important;
  }

  .vision-statement {
    font-size: 1.5rem !important;
    font-weight: 600;
    color: var(--color-text-dark);
    margin-top: var(--space-lg) !important;
    margin-bottom: 0 !important;
  }

  .intro-section {
    margin-bottom: var(--space-2xl);
    text-align: center;
  }

  .intro-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-body);
    margin-bottom: var(--space-xl);
  }

  .role-highlights {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin: var(--space-lg) 0;
    flex-wrap: wrap;
  }

  .role-item {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-blue);
    padding: var(--space-sm) var(--space-lg);
    background: rgba(36, 121, 190, 0.08);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .role-item:hover {
    background: rgba(36, 121, 190, 0.15);
    transform: translateY(-2px);
  }

  .cta-text {
    font-size: 1.125rem;
    color: var(--color-text-muted);
  }

  .jobs-section {
    margin-bottom: var(--space-2xl);
  }

  .section-title {
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .job-card {
    margin-bottom: var(--space-xl);
    border-radius: 16px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .job-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px -12px rgba(36, 121, 190, 0.3);
  }

  .job-header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
    background: transparent;
    border: none;
    border-bottom: 2px solid rgba(36, 121, 190, 0.15);
    cursor: pointer;
    text-align: left;
    transition: background 0.3s ease;
  }

  .job-header:hover {
    background: rgba(36, 121, 190, 0.05);
  }

  .job-header-content {
    flex: 1;
  }

  .expand-icon {
    flex-shrink: 0;
    color: var(--color-blue);
    transition: transform 0.3s ease;
  }

  .job-card.expanded .expand-icon {
    transform: rotate(180deg);
  }

  .job-title {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .job-meta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .job-type,
  .job-mode {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-blue);
    padding: 0.375rem 0.875rem;
    background: rgba(36, 121, 190, 0.1);
    border-radius: 6px;
  }

  .job-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text-body);
    padding: 0 var(--space-xl);
  }

  .job-card.expanded .job-content {
    max-height: 2000px;
    padding: var(--space-lg);
  }

  .job-intro {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: var(--space-lg);
    color: var(--color-text-dark);
  }

  .job-section {
    margin-bottom: var(--space-lg);
  }

  .job-section h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-blue);
    margin-bottom: var(--space-md);
  }

  .job-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .job-section li {
    position: relative;
    padding-left: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .job-section li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-blue);
    font-weight: 600;
  }

  .job-outro {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-blue);
    margin-top: var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(36, 121, 190, 0.15);
  }

  .tech-stack-section {
    margin-bottom: var(--space-2xl);
  }

  .tech-stack-card {
    padding: var(--space-lg);
    border-radius: 16px;
    text-align: center;
  }

  .tech-stack-card h3 {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: var(--space-lg);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-md);
  }

  .tech-tag {
    font-size: 0.9375rem;
    font-weight: 500;
    color: white;
    background: var(--color-blue);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .tech-tag:hover {
    background: var(--color-blue-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(36, 121, 190, 0.3);
  }

  .tech-stack-card h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-blue);
    margin-bottom: var(--space-md);
  }

  .tech-stack-card p {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text-body);
  }

  .contact-section {
    margin-bottom: var(--space-xl);
  }

  .contact-card {
    padding: var(--space-2xl);
    border-radius: 16px;
    text-align: center;
  }

  .contact-card h2 {
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-text-dark);
    margin-bottom: var(--space-md);
  }

  .contact-card p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-body);
  }

  .email-link {
    color: var(--color-blue);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border-bottom: 2px solid transparent;
  }

  .email-link:hover {
    color: var(--color-blue-accent);
    border-bottom-color: var(--color-blue-accent);
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(18px) saturate(160%);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 8px 24px -6px rgba(36, 121, 190, 0.18);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }

  .fade-in:nth-child(1) { animation-delay: 0.1s; }
  .fade-in:nth-child(2) { animation-delay: 0.2s; }
  .fade-in:nth-child(3) { animation-delay: 0.3s; }
  .fade-in:nth-child(4) { animation-delay: 0.4s; }
  .fade-in:nth-child(5) { animation-delay: 0.5s; }

  @media (max-width: 768px) {
    .karriere-page {
      padding: calc(60px + var(--space-lg)) 0 var(--space-lg);
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1.125rem;
    }

    .vision-content p {
      font-size: 1.125rem;
    }

    .role-highlights {
      flex-direction: column;
      align-items: center;
    }

    .job-card {
      padding: var(--space-md);
    }

    .job-title {
      font-size: 1.375rem;
    }

    .tech-tags {
      gap: var(--space-xs);
    }

    .tech-tag {
      font-size: 0.875rem;
      padding: 0.375rem 0.75rem;
    }

    .job-card {
      padding: 0;
    }

    .job-header {
      padding: var(--space-lg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const jobToggles = document.querySelectorAll('[data-job-toggle]');

    jobToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const jobCard = toggle.closest('.job-card');
        jobCard?.classList.toggle('expanded');
      });
    });
  });
</script>
